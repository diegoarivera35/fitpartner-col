<p id="notice"><%= notice %></p>

<h1>Datos</h1>
<h2>
<%= current_user.email %></h2>
<table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th>genero</th>
      <th>actividad</th>
      <th>altura</th>
      <th>peso</th>
      <th>cintura</th>
      <th>cuello</th>
      <th>cadera</th>
      <th>IMC</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.datos.each do |dato| %>
      <tr>
        <td><%= dato.genero %></td>
        <td><%= dato.actividad %></td>
        <td><%= dato.altura %></td>
        <td><%= dato.peso %></td>
        <td><%= dato.cintura %></td>
        <td><%= dato.cuello %></td>
        <td><%= dato.cadera %></td>
        <td><%= dato.IMC %></td>                      
        <td><%= link_to 'Show', dato %></td>
        <td><%= link_to 'Edit', edit_dato_path(dato) %></td>
        <td><%= link_to 'Destroy', dato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="btn btn-outline-primary">
<%= link_to 'New Dato', new_dato_path %></div>